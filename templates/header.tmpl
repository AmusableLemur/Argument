{{define "header"}}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>{{ . }} - A minimalistic discussion board</title>

    <link href="https://unpkg.com/nes.css@2.3.0/css/nes.min.css" rel="stylesheet">
    <link href="https://unpkg.com/nes.icons@2.0.1/css/nes-icons.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">

    <style>
        html {
            font-family: 'Press Start 2P', cursive;
        }

        header, main, footer {
            margin: 0 auto;
            max-width: 986px;
            padding: 10px;
        }

        header {
            display: flex;
            flex-direction: row;
            flex-wrap: nowrap;
            justify-content: space-between;
            align-items: stretch;
            margin: 10px auto;
        }

        header h1 {
            display: flex;
            align-items: center;
            line-height: 2em;
            margin: 0;
        }

        header i {
            font-size: 0.8em;
            position: relative;
            padding-right: 2em;
            top: -0.4em;
        }

        aside {
            display: flex;
            float: right;
            align-items: center;
        }

        aside .nes-btn {
            margin-left: 10px;
        }

        .nes-field {
            margin-bottom: 20px;
        }

        .details {
            color: #d3d3d3;
            font-size: 0.8em;
            margin: 0;
            padding: 0;
        }

        .topic {
            margin-bottom: 40px;
            display: block;
        }

        .submission {
            margin-top: 60px;
        }
    </style>
</head>

<body>
    <header>
        <h1>
            <i class="nes-icon exclamation-triangle"></i>
            {{ . }}
        </h1>

        <aside>
            <a href="#" class="nes-btn">Log In</a>
            <a href="/register" class="nes-btn is-primary">Register</a>
        </aside>
    </header>

    <main>
{{end}}
